.section {
  width: 100%;
  margin-top: 11rpx;
  margin-bottom: 20rpx;
  height: auto;
  overflow: hidden;
  color: #333;
}

.m-item-list{
  width: 100%;
}

.m-item{
  background: #fff;
  margin-top: 10rpx;
  width: 100%;
}

.m-item-header{
  width: 100%;
  color: #333;
  height: 33px;
}

.m-item-content{
  width: 100%;
  padding-top: 22rpx;
}

.pre-img{
  width: 32%;
}

.pre-img image{
  width: 209rpx;
  height: 165rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border: solid 1px #eee;
}

.goods-content{
   width: 68%;
   margin-left: 8rpx;
}

.goods-content .name {
  display: block;
  color: #5a5a5a;
  line-height: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.goods-content .desc {
  display: block;
  color: rgb(102,102,102);
  line-height: 39rpx;
  margin-top: 6rpx;
}
.status-content{
  font-size: 27rpx;
}

.status-content .status-icon{
   width: 35rpx;
   height: 35rpx;
 }

 .status-content .timer{
  margin-left: 6px;
}
.status-content .status-label{
  font-size: 31rpx;
  color: rgb(51,51,51);
  margin: 0 10rpx;
}
.status-content .timer .timer-num{
  background: -webkit-linear-gradient(top, #fa875a, #ff4f54); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(top, #fa875a, #ff4f54); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(top, #fa875a, #ff4f54); /* Firefox 3.6 - 15 */
  background: linear-gradient(to bottom, #fa875a , #ff4f54); /* 标准的语法 */
  color: #fff;
  border-radius: 6rpx;
  display:inline-block;
  width:57rpx;
  text-align:center;
  height:40rpx;
  line-height:40rpx;
}

.m-item-footer{
  display: flex;
  justify-content: space-between;
  height: 56px;
}
.merchant-name{
  margin-left: 11px;
  font-size: 27rpx;
  color: #72cfdd;
}
.join-btn{
  text-align: center;
  color: #fff;
  background: #72cfdd;
  width: 79px;
  height: 29px;
  padding: 3px 6px;
  border: 1rpx solid #d9d9d9;
  margin-top: 11px;
  border-radius: 3px;
  margin-right: 89px;
}

.tips{
  margin-top: 22rpx;
  width: 160rpx;
  color: #666;
}

.tip-title{
  color: #666;
  font-size: 27rpx;
  font-weight: bold;
}

.tip-num{
   color: #888;
   font-weight: bold;
   margin-left: 9px;
}
.flex {
	display: flex;
	display: -webkit-flex;
}

.flex_just {
	-webkit-justify-content: center;
	justify-content: center;
}

.flex_center {
	-webkit-align-items: center;
	-webkit-align-content: center;
}

.flex_colum {
	-webkit-flex-direction: column;
	flex-direction: column;
}

.flex_1 {
	flex: 1;
	-webkit-flex: 1;
}

.flex_around {
	justify-content: space-around;
}

.flex_between {
	justify-content: space-between;
}

.flex_start {
	justify-content: flex-start;
}

.flex_end {
	justify-content: flex-end;
}
.flex_baseline{
  align-items:baseline;
}


