/**app.wxss**/
@import 'components/wux.wxss';
@import 'assets/styles/weui.wxss';
.container {
  box-sizing: border-box;
  background-color: #f4f4f4;
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  height: 100%;
} 
/**分页下拉拓展样式*/
.header ,.bottom{
  color:#999;
  font-size:8pt;
  text-align:center;
  background:#F2F2F2;
}
view,image,text,navigator{
  box-sizing: border-box;
  padding:0;
  margin:0;

}

view,text{
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  font-size: 29rpx;
  color: #333;
}

.logo{
  height: 230px;
}

.row { display:flex; flex-direction:row; }
.column { display:flex; flex-direction:column; }

.ml13{
  margin-left: 13px;
}

.mr13{
  margin-right: 13px;
}

.mb13{
  margin-bottom: 13px;
}

 .tip-icon{
   width: 36rpx;
   height: 36rpx;
   margin-left: 3%;
   margin-right: 1%;
 }
 .tip-text{
   color: #333333;
   font-weight: bold;
   font-size: 31rpx;
 }

.section {
  width: 100%;
  margin-top: 11rpx;
  margin-bottom: 20rpx;
  height: auto;
  overflow: hidden;
  color: #333;
}

.m-item-list{
  width: 100%;
}

.m-item{
  background: #fff;
  margin-top: 13rpx;
  width: 100%;
}

.m-item-header{
  width: 100%;
  color: #333;
  height: 33px;
}

.m-item-content{
  width: 100%;
  padding-top: 11px;
}

.pre-img{
  width: 32%;
}

.pre-img image{
  width: 209rpx;
  height: 165rpx;
  margin-left: 11px;
  margin-right: 11px;
}

.goods-content{
   width: 68%;
}

.goods-content .name {
  display: block;
  color: #5a5a5a;
  line-height: 50rpx;
  font-size: 31rpx;
  font-weight: bold;
}

.goods-content .desc {
  display: block;
  color: #a0a0a0;
  line-height: 39rpx;
  font-size: 30rpx;
  margin-top: 2px;
}
.status-content{
  font-size: 27rpx;
 
}

.status-content .status-icon{
   width: 35rpx;
   height: 35rpx;
 }

 .status-content .timer{
  margin-left: 6px; 
}
.status-content .status-label{
  font-size: 31rpx;
  color: #333;
}
.status-content .timer .timer-num{
  padding: 3px 6px;
  background: -webkit-linear-gradient(top, #fa875a, #ff4f54); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(top, #fa875a, #ff4f54); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(top, #fa875a, #ff4f54); /* Firefox 3.6 - 15 */
  background: linear-gradient(to bottom, #fa875a , #ff4f54); /* 标准的语法 */
  color: #fff;
  border-radius: 6rpx;
}

.m-item-footer{
  display: flex;
  justify-content: space-between;
  height: 56px;
}
.merchant-name{
  margin-left: 11px;
  font-size: 27rpx;
  color: #72cfdd;
}
.join-btn{
  text-align: center;
  color: #fff;
  background: #72cfdd;
  width: 79px;
  height: 29px;
  padding: 3px 6px;
  border: 1rpx solid #d9d9d9;
  margin-top: 11px;
  border-radius: 3px;
  margin-right: 89px;
}

.tips{
  margin-top: 11px;
  width: 79px;
  color: #888;
}

.tip-title{
  color: #888;
  font-size: 27rpx;
  font-weight: bold;
}

.tip-num{
   color: #888;
   font-weight: bold;
   margin-left: 9px;
}