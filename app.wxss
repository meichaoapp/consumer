/**app.wxss**/
@import 'components/wux.wxss';
@import 'assets/styles/weui.wxss';
.container {
  box-sizing: border-box;
  background-color: #f4f4f4;
  font-family: PingFangSC-Light,helvetica,'Heiti SC';
  height: 100%;
}
/**分页下拉拓展样式*/
.header ,.bottom{
  color:#999;
  font-size:8pt;
  text-align:center;
  background:#F2F2F2;
}
.n-bottom{
  text-align:center;
  background:#F2F2F2;
  padding: 20rpx 0;
  font-size: 24rpx;
  padding-bottom: 30rpx;
}
.n-bottom .txt{
  color: #ccc;
}
.transverseline{
  display: inline-block;
  width: 100rpx;
  height: 29rpx;
  position: relative;
  margin: 0 20rpx;
}
.transverseline .line{
  position: absolute;
  width:100rpx;
  height: 1px;
  background: #ccc;
  top: 18rpx;
  left: 0;
}
