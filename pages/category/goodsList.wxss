/* pages/category/goodsList.wxss */
.goods_list_box{
    margin-bottom:105rpx;
}
.search_box{
    padding:0 30rpx;
    height:58rpx;
    position:relative;
}
input{
    backgorund:#F3F3F3;
    border-radius:29rpx;
    border:1px solid #eee;
    padding:0 28rpx;
    padding-left:67rpx;
}
.icon_search{
    width:29rpx;
    height:30rpx;
    margin-right:10rpx;
    position:absolute;
    left:58rpx;
    top:15rpx;

}
.menu{
    height:90rpx;
    border-bottom:1px solid #eee;
    width:100%;
}
.menu view{
    width:25%;
    height:90rpx;
    line-height:90rpx;
    text-align:center;
}
.on{
    border-bottom:2px solid #79C54C;
    color:#79C54C
}


.goods_list .good_image{
    width:245rpx;
    height:245rpx;
    margin-right:20rpx;
}
.goods_list .good_image image{
    width:245rpx;
    height:245rpx;
    border-radius:5rpx;
}
.goods_list .goods_con:first-child{
    margin-top:20rpx;
}
.goods_list .goods_con{
    padding:35rpx 30rpx;
    border-bottom:1px solid #DADADA;
}
.goods_list .curr_menu{
    height:93rpx;
    line-height:93rpx;
}
.goods_list .content{
    flex:1;
}
.goods_list .content .desc{
    margin:10rpx 0 20rpx;
    color:#999999;
}
.goods_list .content .curr_price{
    font-size:32rpx;
    color:#FF3F3F;
    margin-right:4rpx;
}
.goods_list .content .old_price{
    font-size:18rpx;
    text-decoration: line-through;
    color:#999999;
}
.goods_list .disable .name {
    color:#B4B4B4;
}
.goods_list .disable .desc {
    color:#B4B4B4;
}
.goods_list .disable .curr_price{
    color:#B4B4B4;
}
.goods_list .disable .old_price{
    color:#B4B4B4;
}
.set_car image{
    width:46rpx;
    height:46rpx;
}
.set_car .count{
    margin:0 20rpx;
}

/*底部购物车和结算*/
.car_box{
    position:fixed;
    bottom:0;
    left:0;
    width:100%;
    height:103rpx;
    background:rgba(0,0,0,0.7);
    border-bottom:1px solid #E5E5E5;
}

.car_box image{
    width:74rpx;
    height:74rpx;
}
.shopingcart_box{
    margin:0 45rpx;
    position:relative;
}
.shopingcart_box .count_num{
    position:absolute;
    width:29rpx;
    height:29rpx;
    border-radius:50%;
    background:#FF9000;
    font-size:24rpx;
    text-align:center;
    line-heigt:29rpx;
    right:-16rpx;
    top:0;
}
.total_money{
    font-size:36rpx;
}
.icon_settle{
    background:#81C95A;
    width:231rpx;
    height:103rpx;
    line-height:103rpx;
    text-align:center;
    color:#fff;
    font-size:36rpx;
}

/*使屏幕变暗  */
.commodity_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.2;
    overflow: hidden;
    z-index: 1000;
    color: #fff;
}

.shop_car {
    height:628rpx;
    width:100%;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 2000;
    background: #fff;
    display:flex;
    flex-direction:column;

}
.shop_car .car_title{
    height:76px;
    padding:0 30rpx;
}
.classify_list{
    overflow:auto;
    margin-bottom:100rpx;
}
.classify_title{
    height:51rpx;
    line-height:51rpx;
    background: #F8FFF4;
    color:#60A33B;
    border-top:1px solid #81C95A;
    border-bottom:1px solid #81C95A;
    padding:0 30rpx;
}
.classify_item{
    height:103rpx;
    border-bottom:1px solid #D9D9D9;
    padding:0 30rpx;
}
.classify_item .goods_name{
    width:256rpx;
    margin-right:88rpx;

}
.classify_item .right_part{
    flex:1;
}
.icon_soldout{
    width:166rpx;
    height:100rpx;
    position:absolute;
    right:0;
}