/* pages/details/details.wxss */

.detail_box{
    margin-bottom:90rpx;
}
.banner_box{
    width:100%;
}
.banner_box image{
    width:100%;
}
.goods_intro{
    padding:0 30rpx;
}
.goods_name .left{
    flex:1;
}
.left .icon_sale{
    width:112rpx;
    height:30rpx;
    line-height:30rpx;
    text-align:center;
    border-radius:5rpx;
    background:#FF9000;
    color:#fff;
    margin-top:6rpx;
    margin-right:10rpx;
}
.left .name{
    flex:1;
    line-height:42rpx;
}
.right{
    width:100rpx;
    border-left:1px solid #979797;
}
.icon_share{
    width:38rpx;
    height:38rpx;
    margin-bottom:6rpx;
}
.goods_dec{
    margin:15rpx 0;
}
.old_price{
    margin-left:15rpx;
    text-decoration: line-through;
}
.progress{
    margin-right:6rpx;
    margin-top:5rpx;
}
.timer{
    text-align:right;
}


.merchant_name_box2{
    margin-top:20rpx;
    padding:20rpx 30rpx;

}
.merchant_name_con{
    height:100%;
}
.merchant_name_box2 .left_part{
    width:87rpx;
    height:87rpx;
    margin-right:13rpx;
}
.right_part{
    flex:1;
}
.icon_user{
    width:22rpx;
    height:25rpx;
    margin-right:6rpx;
}
.icon_link{
    width:25rpx;
    height:25rpx;
    margin-right:6rpx;
}
.first_child{
    margin-right:120rpx;
}
.address_box image{
    width:20rpx;
    height:25rpx;
    margin-right:5rpx;
    margin-top:6rpx;
}
.address_box view{
    flex:1
}

.fixed_box{
    position:fixed;
    left:0;
    right:0;
    bottom:0;
    height:90rpx;
    border-top:1px solid #eee;
}
.fixed_box .part_one{
    width:220rpx;
}
.fixed_box .part_two{
    flex:1;
}
.fixed_box .part_two view{
    width:50%;
    height:90rpx;
    text-align:center;
    line-height:90rpx;
}
.fixed_box .part_two view:first-child{
    background:#222222;
}
.fixed_box .part_two view:last-child{
    background:#81C95A ;
}
.home{
    width:50%;
    border-right:1px solid #E0E0E0;
}
.kefu{
    width:50%;
}
.icon_home{
    width:37rpx;
    height:34rpx;
    margin-bottom:6rpx;
}
.icon_kefu{
    width:36rpx;
    height:35rpx;
    margin-bottom:6rpx;
}
.quality{
    height:79rpx;
    border-top:1px solid #eee;
}
.icon_select{
    width:27rpx;
    height:27rpx;
    margin-right:5rpx;
}
.group_buy_desc{
    height:264rpx;
    margin:20rpx 0;
}
.group_buy_desc .title{
    height:81rpx;
    padding:0 30rpx;
    border-bottom:1px solid #eee;
    text-align:center;
    line-height:81rpx;
}
.group_buy_desc .con{
    padding:10rpx 30rpx 25rpx 30rpx;
    line-height:48rpx;
}
.graphic_details_title{
    height:81rpx;
    line-height:81rpx;
    padding:0 30rpx;
}
