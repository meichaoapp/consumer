@import "../../../utils/iconfonts.wxss";
page{
    background: #f4f4f4;
    min-height: 100%;
}
.rows{
  display: flex;
  flex-direction:row; 
}
.dollarTreasuretitle{
margin-top: 18rpx;
  font-size: 34rpx;
  font-weight: bold;
  padding: 0 14rpx;
}
.timer-num{
  padding: 3rpx 6rpx;
  background: -webkit-linear-gradient(top, #fa875a, #ff4f54); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(top, #fa875a, #ff4f54); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(top, #fa875a, #ff4f54); /* Firefox 3.6 - 15 */
  background: linear-gradient(to bottom, #fa875a , #ff4f54); /* 标准的语法 */
  color: #fff;
  border-radius: 6rpx;
}
.container{
    background: #f4f4f4;
    min-height: 100%;
    padding-top: 10rpx;
}
.dollarTreasure{
  width: 94%;
  margin-left: 3%;
}
.dollarTreasure .dollarTreasure-cells{
  /* width: 100%; */
  background: #fff;
  margin-top: 16rpx;
  box-shadow: 5rpx 0 6rpx #fac6c6;
  /* border-radius: 8rpx; */
  padding: 20rpx;
  /* box-sizing:border-box;  */

}
.dollarTreasure-cells-main{
  display: flex;
  flex-direction: row;
}
.dollarTreasure-cells-main .proimgs{
  width: 30%;
}
.dollarTreasure-cells-main .proimgs image{
  width: 182rpx;
  height: 140rpx;
  /* height: auto; */
}
.dollarTreasure-cells-main .prodesc{
  width: 70%;
  padding-left: 10rpx;
}
.prodesc text{
display: block;

}

.prodesc .name{
  color: #333;
  font-size:28rpx;
  /* font-weight: bold; */
  line-height: 32rpx;
  padding-top: 8rpx;
  padding-bottom: 34rpx;
}

.prodesc .prices{
  color: #e38f23;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 42rpx;
  font-weight: bold;
}
.prodesc .prices .rmb{
  font-size: 24rpx;
  display: inline;
    color: #e38f23;
}


.prodesc .shares{
  flex: 1;
  color: #72cfdd;
  height: 50rpx;
  text-align: right;
  line-height: 60rpx;
  font-size: 24rpx;
  vertical-align:bottom;
}
.prodesc .shares image{
  width: 20rpx;
  height: 20rpx;
}
.dollarTreasure-cells-dataline{
  width: 72%;
