<import src="../../../components/loading/loading.wxml" />
<template is="loading" data="{{ ...$wux.loading }}" />
<view class="header" hidden="{{hideHeader}}">
  <view>下拉刷新中……</view>
  <view>{{refreshTime}}</view>
</view>
<view class="container">
  <!-- 一元夺宝 -->

<view class='dollarTreasuretitle'>
   <text class='iconfont icon-huore'></text>火热开抢
</view>


  <scroll-view scroll-y="true" class='dollarTreasure'>

    <view class='dollarTreasure-cells' wx:for="{{list}}" wx:for-index="index" wx:for-item="item" wx:key="{{item.id}}">
      <navigator url='/pages/shopping/dollarTreasureDetail/dollarTreasureDetail?id={{item.id}}'>
      <view class='dollarTreasure-cells-main'>
        <view class='proimgs'>
          <image src='{{item.url}}'></image>
        </view>
        <view class='prodesc'>
          <text class='name'>{{item.name}}</text>

          <view class='rows'>
            <view class='prices'> ¥{{item.price}} </view>
            <view class='shares'>
              分享朋友 机会翻倍
              <image src='/static/images/icon_collect.png'></image>
            </view>

          </view>

        </view>

      </view>
      <view wx:if="{{item.status == 1}}" class='dollarTreasure-cells-dataline' >
        <view class='countDownv'>
          <text class='textddkj'>等待开奖</text>
          <text class='timer-num'>{{item.hour}}</text> :
          <text class='timer-num'>{{item.min}}</text> :
          <text class='timer-num'>{{item.sec}}</text>
        </view>
        <navigator class='prizebtns'>
          <text class='btns'>马上抢</text>
        </navigator>
      </view>

     <view wx:if="{{item.status == 2}}" class='dollarTreasure-cells-dataline waitFor'>
        <view class='countDownv '>

          {{item.lotteryTime}} 开奖

        </view>
        <navigator class='prizebtns'>
          <text class='btns'>等待开奖</text>
        </navigator>
      </view>
      </navigator>
    </view>


    <!-- 更多往期中奖按钮 -->
    <navigator class='morewinprizenav'>
      <view class='morewinprize'>更多往期中奖</view>
    </navigator>


    <!-- 中奖信息 -->
    <view class='dollarTreasure-cells'>
      <view class='dollarTreasure-cells-main'>
        <view class='proimgs'>
          <image src='/static/images/TB1baFLaOrpK1RjSZFhXXXSdXXa_!!0-item_pic.jpg_250x250.jpg'></image>
        </view>
        <view class='prodesc winprizeinfo'>
          <text class='name'>难以置信，一块钱就能得到</text>
          <text class='peoplename'>获奖者：微信昵称</text>
          <text class='nums'>参与次数：47次</text>
          <text class='date'>开奖时间：2018-10-01 19:00:00</text>


        </view>

      </view>

    </view>



  </scroll-view>



</view>