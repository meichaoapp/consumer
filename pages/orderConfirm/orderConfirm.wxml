<view class="order_confirm_box container">
    <view wx:if="{{isSplitOrder}}" class="auto_tip font15">已为您自动拆分订单，请您再次确认</view>
    <view wx:if="{{isShowPostInfo}}" class="goods_receive_info bg_ff">
        <view class="flex flex_between" style="padding:0 30rpx;">
            <view class="font14 C666">收货人：{{userInfo.name || ""}}</view>
            <view class="font14 C666">{{userInfo.phone || ""}}</view>
        </view>
        <view class="flex flex_center mt20" bindtap='toEditUser'>
            <view class=" flex flex_center" style='width:93%;'>
                <image class="icon_receive_goods" src="/static/images/icon_address.png"></image>
                <view>收货地址：{{ (userInfo.address == "" || userInfo.address == null) ? "去完善用户信息" : userInfo.address }}</view>
            </view>
            <image src="{{basePath}}/go.png" class="icon_go icon_go_address"></image>
        </view>
    </view>
    <view class="line_border"></view>
    <!--订单：拼团商品 -->
    <view wx:if="{{merchantOrder != null}}" class="intro_box bg_ff">
        <view  class="title flex flex_between flex_center">
            <view class="flex flex_center">
                <image class="icon_type" src="/static/images/icon_type.png"></image>
                <view>{{merchant.merchantName}}</view>
            </view>
            <view class="common_tag group_tag">拼团</view>
        </view>
        <view class="list">
            <view wx:for="{{merchantOrder.goodsList}}" wx:key="{{item.index}}"  data-id="{{item.id}}" class="list_item flex flex_between">
                <view class="left_part">
                    <image src="{{item.url}}"></image>
                </view>
                <view class="right_part">
                    <view class="flex flex_colum">
                        <view>{{item.name}}</view>
                        <view class="font12 C999 mt20 mb20">{{item.comments}}</view>
                        <view class="flex flex_between flex_center">
                            <view>
                                <text class=" font18 c_f3f">￥{{item.price}}</text>
                            </view>
                            <view class="set_car flex flex_center flex_end">
                                <image bindtap='cutNumber' data-id='{{item.id}}' src="https://wxpic.iliangpin.cn/meichao/minus.png"></image>
                                <text class="count">{{item.buyNum}}</text>
                                <image bindtap='addNumber' data-id='{{item.id}}'  src="https://wxpic.iliangpin.cn/meichao/plus.png"></image>
                            </view>

                        </view>
                    </view>
                </view>
            </view>
        </view>
        <view class="address_box flex flex_center">
            <image class="icon_receive_goods" src="/static/images/icon_address.png"></image>
            <view class="C666">取货地址：{{merchant.address}}</view>
        </view>
    </view>
    
    <!-- 订单：店铺自营商品 -->
    <view wx:if="{{oneselfOrder != null}}" class="intro_box bg_ff">
        <view  class="title flex flex_between flex_center">
            <view class="flex flex_center">
                <image class="icon_type" src="/static/images/icon_type.png"></image>
                <view>{{merchant.merchantName}}</view>
            </view>
            <view class="common_tag proprietary_tag">自营</view>
        </view>
        <view class="list bg_ff">
            <view wx:for="{{oneselfOrder.goodsList}}" wx:key="{{item.index}}"  data-id="{{item.id}}" class="list_item flex flex_between flex_center">
                <view class="left_part">
                    <image src="{{item.url}}"></image>
                </view>
                <view class="right_part">
                    <view class="flex flex_colum">
                        <view>{{item.name}}</view>
                        <view class="font12 C999 mt20 mb20">{{item.comments}}</view>
                        <view class="flex flex_between flex_center">
                          <view>
                            <text class=" c_f3f font18">￥{{item.price}}</text>
                          </view>
                            
                          <view class="set_car flex flex_center flex_end">
                                <image bindtap='cutNumber' data-id='{{item.id}}' src="https://wxpic.iliangpin.cn/meichao/minus.png"></image>
                                <text class="count">{{item.buyNum}}</text>
                                <image bindtap='addNumber' data-id='{{item.id}}'  src="https://wxpic.iliangpin.cn/meichao/plus.png"></image>
                        </view>

                        </view>
                    </view>
                </view>
            </view>
        </view>
        <view style="padding:0 30rpx">
            <!--门店自取-->
            <view class="intro flex flex_colum">
                <view bindtap='switchDeliveryType' data-type='1' class="flex flex_center choice_state">
                    <image class="icon_choice" src="{{basePath}}/{{(deliveryType == 1) ? 'choice.png':'un_choice.png'}}"></image>
                    <view class="font16">门店自取</view>
                </view>
                <view class="address_box flex">
                    <view class="icon_address">取货地址</view>
                    <view class="address">{{merchant.address}}</view>
                </view>
                <view class="merchant_name">
                    <text class="C666 mr30">{{merchant.merchantName}}</text>
                    <text class="C666">{{merchant.merchantPhone}}</text>
                </view>
            </view>
            <!--送货上门-->
            <view wx:if="{{merchant.isDelivery == 2}}" class="intro flex flex_colum">
                <view bindtap='switchDeliveryType' data-type='2'  class="flex flex_center choice_state">
                    <image class="icon_choice" src="{{basePath}}/{{(deliveryType == 2) ? 'choice.png':'un_choice.png'}}"></image>
                    <view class="font16">送货上门</view>
                </view>
                <view class="single flex flex_between flex_center">
                    <view class="flex">
                        <view class="mr10">配送费</view>
                        <view wx:if="{{merchant.expenditure != 0}}" class="C999 font12">
                        (不足{{merchant.expenditure}}元收运费{{merchant.deliveryCost}}元)
                        </view>
                    </view>
                    <view class="font16">￥{{oneselfOrder.deliveryCost}}</view>
                </view>
            </view>
        </view>
    </view>

     <!--订单：优惠券 -->
    <view wx:if="{{couponOrders.length > 0}}" class="intro_box bg_ff">

        <block wx:for="{{couponOrders}}" wx:key="{{item.index}}" wx:for-item="couponOrder">
            <view class="coupon_box">
                <view  class="title flex flex_between flex_center">
                    <view class="flex flex_center">
                        <image class="icon_type" src="/static/images/icon_type.png"></image>
                        <view>{{couponOrder.merchant.merchantName}}</view>
                    </view>
                    <view class="common_tag coupon_tag">优惠券</view>
                </view>
                <view class="list bg_ff">
                    <view wx:for="{{couponOrder.goodsList}}" wx:key="{{item.index}}"
                          data-id="{{item.id}}" class="list_item flex flex_between flex_center">
                        <view class="left_part">
                            <image src="{{item.url}}"></image>
                        </view>
                        <view class="right_part">
                            <view class="flex flex_colum">
                                <view style="margin-right:20rpx;">{{item.name}}</view>
                                <view class="font12 C999 mt20 mb20">{{item.comments}}</view>
                                <view class="flex flex_between flex_center">
                                    <view>
                                        <text class="c_f3f font18">￥{{item.price}}</text>
                                    </view>
                                    <view class="set_car flex flex_center flex_end">
                                        <image bindtap='cutNumber' data-id='{{item.id}}' src="https://wxpic.iliangpin.cn/meichao/minus.png"></image>
                                        <text class="count">{{item.buyNum}}</text>
                                        <image bindtap='addNumber' data-id='{{item.id}}'  src="https://wxpic.iliangpin.cn/meichao/plus.png"></image>
                                    </view>

                                </view>
                            </view>
                        </view>
                    </view>

                </view>
                <view class="address_box flex flex_center">
                    <image class="icon_receive_goods" src="/static/images/icon_address.png"></image>
                    <view class="C666">消费地址：{{couponOrder.merchant.address}}</view>
                </view>
            </view>
        </block>   
    </view>

    <!--订单：电商 -->
    <view class="intro_box bg_ff">
        <view  class="title flex flex_between flex_center">
            <view class="flex flex_center">
                <image class="icon_type" src="/static/images/icon_type.png"></image>
                <view>兴业春天【三好鲜生店】</view>
            </view>
            <view class="common_tag b2c_tag">电商</view>
        </view>
        <view class="list">
            <view  class="list_item flex flex_between">
                <view class="left_part">
                    <image src="https://wxpic.iliangpin.cn/meichao/1.png"></image>
                </view>
                <view class="right_part">
                    <view class="flex flex_colum">
                        <view>小浣熊儿童洗发沐浴露500ML附赠牙刷+牙膏+洗漱杯</view>
                        <view class="font12 C999 mt20 mb20">颜色分类：黄色   尺码分类：90码</view>
                        <view class="flex flex_between flex_center">
                            <view>
                                <text class=" font18 c_f3f">￥31.5</text>
                            </view>
                            <view class="set_car flex flex_center flex_end">
                                <image bindtap='cutNumber'  src="https://wxpic.iliangpin.cn/meichao/minus.png"></image>
                                <text class="count">5</text>
                                <image bindtap='addNumber'   src="https://wxpic.iliangpin.cn/meichao/plus.png"></image>
                            </view>

                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>


    <view class="bottom_box bg_ff">
        <view class="bottom_item">
            
            <view  class="single flex flex_between flex_center">
                <view class="flex">
                    <view class="mr10">优惠券</view>
                </view>
                <view class="C999 font12 flex flex_center">
                    <text>暂无可用的优惠券</text>
                    <image class="icon_go" src="{{basePath}}/go.png"></image>
                </view>

            </view>
            <view  class="single flex flex_between flex_center">
                <view class="flex">
                    <view class="mr10">支付方式</view>
                </view>
                <view class="flex flex_center">
                    <image class="icon_pay" src="{{basePath}}/wx-pay.png"></image>
                    <view class="font16">微信支付</view>
                </view>
            </view>
            <view  class="single single2 flex flex_end flex_center">
                <view class="mr13">已优惠<text class="c_9000">￥{{preferential}}</text></view>
                <view class="flex flex_center"><text>合计:</text>￥<text class="font24">{{needPay}}</text></view>
            </view>
        </view>
    </view>
    <!--定位在底部-->
    <view class="fixed_box bg_ff flex flex_between">
        <view class="total flex flex_center">
            <!--<view class="mr6 C666">已优惠￥{{preferential}}</view>-->
            <view class="flex flex_center"><text>合计：</text><text>￥</text><text class="font24">{{needPay}}</text></view>
        </view>
        <view wx:if="{{count == 0}}" bindtap='joinGroup' class="flex pay_box flex_center flex_just">
            <image class="icon_pay2" src="{{basePath}}/wx_pay.png"></image>
            <view class="font16 cfff">立即支付</view>
        </view>
         <view wx:else class="flex pay_box flex_center flex_just">
            <image class="icon_pay2" src="{{basePath}}/wx_pay.png"></image>
            <view class="font16 cfff">立即支付</view>
        </view>
    </view>

    <view bindtap='toIndex' class="fixed_right flex flex_center flex_just flex_colum">
        <image src="/static/images/icon_home.png"></image>
        <view>美超首页</view>
    </view>
</view>
