.o-details-lists-cell{
    /*height:273rpx;*/
    background: #fff;
    margin-top: 17rpx;
}
.o-details-lists:first-child {
   // margin-top: 17rpx;
}
.o-details-lists-cell-title{
    width:100%;
    padding:25rpx 30rpx;
    border-bottom:1px solid #CCCCCC;
}
.o-details-lists-cell-main{
    width: 100%;
    padding: 20rpx;
    display: flex;
    flex-direction: row;
    flex:1;
}
.o-details-lists-cell-img,.o-details-lists-cell-img image{
    width: 87rpx;
    height: 87rpx;
}
.o-details-lists-cell-desc{
    flex: 1;
    margin-left: 18rpx;
}
.o-details-lists-cell-desc .merchant_name{
    padding-bottom:11rpx;
    width:100%;
}
.join_num text:last-child{
    color:#999;
}
.o-details-lists-cell-desc .curr_sale{
    width:100%;
    margin-top:11rpx;
}
.curr_sale text:first-child{
    color:#666;
}
.curr_sale text:last-child{
    color:#333;
    font-size:36rpx;
}
.o-details-lists-cell-status{
    font-size: 32rpx;
    /* font-weight: bold; */
    color: #72cfdd;
    text-align: right;
    padding-right: 30rpx;
    padding-bottom: 20rpx;
}
.finished{
    color: #999999!important;
}
.status0{
    color:#60A33B;
}


