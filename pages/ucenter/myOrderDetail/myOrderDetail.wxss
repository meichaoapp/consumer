
.container{
    height:100%;
    padding-top:20rpx;
}
.address_box{
    padding:30rpx;
}
.icon_go{
    width:21rpx;
    height:40rpx;
}
.icon_address{
    width:28rpx;
    height:31rpx;
    margin-right:14rpx;
}
.line_border{
    background:linear-gradient(-90deg, #89E571 0%, #76CA4A 100%);
    height:10rpx;
}
.order_info_box .title{
    height:82rpx;
    padding:0 30rpx;
    margin-top:20rpx;
}
.sure_receive{
    border: 1rpx solid #FF7A16;
    color:#FF7A16;
    border-radius: 5rpx;
    width:197rpx;
    height:54rpx;
    text-align:center;
    line-height:54rpx;
}
.left_part image{
    width:190rpx;
    height:190rpx;
    margin-right:16rpx;
}
.goods_name{
    margin-right:50rpx;
}
.list_item{
    padding:35rpx 30rpx;
    border-bottom:1rpx solid #CBCBCB;
}
.list_item:last-child{
    border-bottom:none
}
.order_info{
    height:560rpx;
    padding:0 30rpx;
}
.order_info .title{
    height:71rpx;
    border-bottom:1rpx solid #DADADA;
    padding:10rpx 0 20rpx;
}
.order_intro name{
    color:#999;
    font-size:30rpx;
}
.copy_btn{
    width:77rpx;
    height:44rpx;
    text-align:center;
    line-height:77rpx;
    border:1rpx solid #EBEBEB;
}
.single_line{
    padding:15rpx 0;
}
