/* pages/b2c/index/index.wxss */
.container{
    padding-bottom:240rpx;
}
.search_box{
    padding:20rpx 30rpx;
    position:relative;
    margin-bottom:10rpx;
}
.search_box input{
    background: #F1F1F1;
    border: 1px solid #E7E7E7;
    border-radius: 8rpx;
    height:60rpx;
    padding:0 28rpx;
    padding-left:67rpx;
    width:380rpx;
    margin-right:20rpx;

}
.icon_search{
    width:29rpx;
    height:30rpx;
    margin-right:10rpx;
    position:absolute;
    left:58rpx;
    top:38rpx;
}
.icon_go{
    width:11rpx;
    height:20rpx;
    margin-left:10rpx;
}
.tabs{
    width: 100%;
    height:84rpx;
    background:#fff;
    white-space: nowrap;
}
.tabs view {
    display: inline-block;
    height:84rpx;
    line-height:84rpx;
    font-size: 28rpx;
    text-align: center;
    overflow: hidden;
    text-overflow:ellipsis;
    width:20%;
}
.tabs .active{
    height:79rpx;
    line-height:75rpx;
    border-bottom:5rpx solid #89C765 ;
    color:#89C765;
    font-size:30rpx;
    font-weight:bold;
}
.classify_list{
    border-top: 1rpx solid #D9D9D9;
    overflow:hidden;
}
.single_item{
    width:20%;
    padding:23rpx 0;
    float:left;
}
.single_item image{
    width:98rpx;
    height:98rpx;
    margin-bottom:20rpx;
    border-radius:50%;
}
.goods_list{
    padding:10rpx 17rpx;
    overflow:hidden;
}
.goods_item{
    float:left;
    margin:10rpx 8rpx;
    width:342rpx;
    border-radius:10rpx;
    overflow:hidden;
    padding-bottom:20rpx;
}
.goods_item image{
    width:342rpx;
    height:342rpx;
}
.goods_item .name{
    margin:20rpx 30rpx 10rpx 20rpx;
}
.sell_info{
    display:flex;
    justify-content: space-between;
    align-items: center;
    margin:0rpx 30rpx 0rpx 20rpx;
}
.price{
    color:#FF0D07;
    font-size:32rpx;
}

.fixed_bottom{
    position:fixed;
    bottom:0;
    left:0;
    right:0;
}
/*底部购物车和结算*/
.car_box{
    width:100%;
    height:103rpx;
    background:rgba(0,0,0,0.7);
    border-bottom:1px solid #E5E5E5;
}

.car_box image{
    width:74rpx;
    height:74rpx;
}
.shopingcart_box{
    margin:0 45rpx;
    position:relative;
}
.shopingcart_box .count_num{
    position:absolute;
    width:29rpx;
    height:29rpx;
    border-radius:50%;
    background:#FF9000;
    font-size:24rpx;
    text-align:center;
    line-heigt:29rpx;
    right:-16rpx;
    top:0;
}
.total_money{
    font-size:36rpx;
    margin-left:40rpx;
}
.icon_settle{
    background:#81C95A;
    width:231rpx;
    height:100rpx;
    line-height:100rpx;
    text-align:center;
    color:#fff;
    font-size:36rpx;
}

.bottom_part{
    height:100rpx;
}
.bottom_part>navigator{
    width:374rpx;
    display:flex;
    align-items:center;
    justify-content: center;
}
.bottom_part>navigator:first-child{
    border-right:1px solid #ADADAD;
}
.icon_order{
     width:36rpx;
     height:39rpx;
     margin-right:15rpx;
 }
.icon_mine{
    width:32rpx;
    height:42rpx;
    margin-right:15rpx;
}