/* pages/b2c/index/index.wxss */
.container{
    padding-bottom:240rpx;
}
.tabs view{
    height:79rpx;
    line-height:79rpx;
}
.tabs .active{
    height:74rpx;
    line-height:74rpx;
    border-bottom:5rpx solid #89C765 ;
    color:#89C765 ;
    font-weight:bold;
}
.classify_list{
    padding:0 11rpx;
    border-top: 1rpx solid #D9D9D9;
    overflow:hidden;
}
.single_item{
    padding:24rpx;
    float:left;
}
.single_item image{
    width:98rpx;
    height:98rpx;
    margin-bottom:20rpx;
    border-radius:50%;
}
.goods_list{
    padding:10rpx 17rpx;
    overflow:hidden;
}
.goods_item{
    float:left;
    margin:10rpx 8rpx;
    width:342rpx;
    border-radius:10rpx;
    overflow:hidden;
    padding-bottom:20rpx;
}
.goods_item image{
    width:342rpx;
    height:342rpx;
}
.goods_item .name{
    margin:20rpx 30rpx 10rpx 20rpx;
}
.sell_info{
    display:flex;
    justify-content: space-between;
    align-items: center;
    margin:0rpx 30rpx 0rpx 20rpx;
}
.price{
    color:#FF0D07;
    font-size:32rpx;
}

.fixed_bottom{
    position:fixed;
    bottom:0;
    left:0;
    right:0;
}
/*底部购物车和结算*/
.car_box{
    width:100%;
    height:103rpx;
    background:rgba(0,0,0,0.7);
    border-bottom:1px solid #E5E5E5;
}

.car_box image{
    width:74rpx;
    height:74rpx;
}
.shopingcart_box{
    margin:0 45rpx;
    position:relative;
}
.shopingcart_box .count_num{
    position:absolute;
    width:29rpx;
    height:29rpx;
    border-radius:50%;
    background:#FF9000;
    font-size:24rpx;
    text-align:center;
    line-heigt:29rpx;
    right:-16rpx;
    top:0;
}
.total_money{
    font-size:36rpx;
    margin-left:40rpx;
}
.icon_settle{
    background:#81C95A;
    width:231rpx;
    height:100rpx;
    line-height:100rpx;
    text-align:center;
    color:#fff;
    font-size:36rpx;
}

.bottom_part{
    height:100rpx;
}
.bottom_part>view{
    width:374rpx;
}
.bottom_part>view:first-child{
    border-right:1px solid #ADADAD;
}
.icon_order{
     width:36rpx;
     height:39rpx;
     margin-right:15rpx;
 }
.icon_mine{
    width:32rpx;
    height:42rpx;
    margin-right:15rpx;
}