/* pages/details/details.wxss */
page{
    background:#f4f4f4;
}
.detail_box{
    margin-bottom:180rpx;
}
.top_image{
    width:100%;
    height:516rpx;
    position:relative;
}
.top_image image{
    width:100%;
    height:100%;

}
.goods_info{
    padding:30rpx;
}
.tag_line{
    height:79rpx;
    border-top:1rpx solid #F0EFEF;
}
.tag_line image{
    width:28rpx;
    height:28rpx;
    margin-right:10rpx;
}

.merchant_box{
    padding:35px 30rpx 25rpx;
    margin-top:20rpx;
}

.part_one image{
    width:100rpx;
    height:83rpx;
    margin-right:15rpx;
}
.btn_go_shop{
    width:130rpx;
    height:50rpx;
    border: 1px solid #FF5E29;
    border-radius: 5rpx;
    color:#FF5E29;
    text-align:center;
    line-height: 50rpx;
}
.icon_gao{
    width:30rpx;
    height:30rpx;
    background: #FFECDE;
    border-radius: 3rpx;
    color:#FF5E29;
    font-size:22rpx;
    margin-left:10rpx;
    text-align:center;
    line-height:30rpx;
}
.part_two{
    margin-top:25rpx;
}

.graphic_details{
    margin-top:20rpx;
}
.graphic_details image{
    width:100%;
}
.graphic_details_title{
    height:81rpx;
    line-height:81rpx;
    padding:0 30rpx;
}
.tag{
    width:10rpx;
    height:30rpx;
    background: #7CBF3A;
    margin-right:10rpx;
}

.fixed_box{
    position:fixed;
    left:0;
    right:0;
    bottom:0;
    height:90rpx;
    border-top:1px solid #eee;
}
.fixed_box .left_part{
    width:220rpx;
}
.fixed_box .right_part{
    flex:1;
}
.fixed_box .right_part view{
    width:50%;
    height:90rpx;
    text-align:center;
    line-height:90rpx;
}
.fixed_box .right_part view:first-child{
    background:#222222;
}
.fixed_box .right_part view:last-child{
    background:#81C95A ;
}
.home{
    width:50%;
    border-right:1px solid #E0E0E0;
}
.kefu{
    width:50%;
}
.icon_home{
    width:37rpx;
    height:34rpx;
    margin-bottom:6rpx;
}
.icon_kefu{
    width:36rpx;
    height:35rpx;
    margin-bottom:6rpx;
}
.contact_btn{
    display:flex;
    flex-direction:column;
    justify-content: center;
    align-items: center;
    background:#fff;
    padding:0;
    margin:0;
    width:100%;
}
.contact_btn view{
    line-height:30rpx;
}
button.contact_btn::after{
    border: none;
}

/*使屏幕变暗  */
.commodity_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.2;
    overflow: hidden;
    z-index: 1000;
    color: #fff;
}




.shop_car {
    height:840rpx;
    width:100%;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 2000;
    background:none;
    display:flex;
    flex-direction:column;

}
.image_box{
    height:42rpx;
}
.goods_image{
    width:222rpx;
    height:222rpx;
    position:absolute;
    top:-40rpx;
    margin-right:20rpx;
    border-radius:10rpx;
}
.oBox{
    height:798rpx;
    background:#fff;
}