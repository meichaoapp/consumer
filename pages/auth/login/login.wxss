/* pages/auth/login2/login2.wxss */
page{
    width:100%;
    height:100%;
}
.login_box{
    padding-top:139rpx;
}
.login_box .name_box{

}
.login_box .name_box image{
    width:31rpx;
    height:25rpx;
    margin-right:6rpx;
}
.login_box .name_box text{
   color:#89C765;
}

.icon_location{
    width:144rpx;
    height:139rpx;
    margin-bottom:15rpx;
}
.icon_address{
    width:22rpx;
    height:28rpx;
    margin-right:6rpx;
    margin-top:6rpx;
}
.location_box{
    margin-top:37rpx;
    padding:0 90rpx;
}
.location_box text{
    margin-bottom:2rpx;
    color:#666666;
    font-size:24rpx;
}
.curr_location{
    flex:1;
    width:0;
    font-size:30rpx;
    height:42rpx;
}
.btn_box{
    margin-top:75rpx;
}
.btn_box image{
    width:257rpx;
    height:64rpx;
}
.btn_box image:first-child{
   margin-right:25rpx;
}

.btn_box .icon_btn{
    width:257rpx;
    height:64rpx;
    line-height:64rpx;
    padding:0;
    color: #fff;
    font-size: 30rpx;
    background: #ffcf3b;
    border-radius: 50rpx;
    margin:0;
    outline:none;
    border:none;
}
.btn_box .btn_sure{
    background:#81C95A;
    margin-left:25rpx;
}


.title{
    height:103rpx;
    padding:0 30rpx;
    border-bottom:1px solid #D9D9D9;
    background:#f5f5f5;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
}
.title view{
    font-size:36rpx;
}
.title image{
    width:27rpx;
    height:27rpx;
}
.modal-content{
    margin-bottom:60rpx;
    overflow:auto;
}
.merchant_item{
    padding:12rpx 30rpx;
    border-bottom: 1px solid #ECECEC;
   /* height:188rpx;*/
}
.merchant_item:last-child{
    border-bottom:none;
}
.merchant_item image{
    width:87rpx;
    height:87rpx;
    margin-right:13rpx;
}
.right_part{
    flex:1;
}

.on{
    background:#F4FFEE;
}
.search_box{
    width:100%;
    height:58rpx;
    position:relative;
}
input{
    height:100%;
    border-radius:5rpx;
    border:1px solid #D6D6D6;
    padding:0 28rpx;
    padding-left:67rpx;
    font-size:24rpx;
}
.icon_search{
    width:29rpx;
    height:30rpx;
    margin-right:10rpx;
    position:absolute;
    left:23rpx;
    top:16rpx;

}
.label_box{
    margin-top:5rpx;
    margin-bottom:10rpx;
}
.label_box text{
    border: 1px solid #FF9000;
    border-radius: 2px;
    padding:2rpx 12rpx;
    color:#FF9000;
    margin:0 5rpx;
    font-size:20rpx;
}
.mask{
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgba(0,0,0,0.4);
    z-index: 999;
}
