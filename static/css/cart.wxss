/*使屏幕变暗  */
.commodity_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.2;
    overflow: hidden;
    z-index: 1000;
    color: #fff;
}

.classify_item{
    border-bottom:1px solid #D9D9D9;
    padding:30rpx 30rpx;
}
.classify_item:last-child{
    border-bottom:none;
}
.classify_item .set_car{
      margin-left:65rpx;
}

.classify_item .right_part{
    flex:1;
}

.shop_car {
    height:628rpx;
    width:100%;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 2000;
    background: #fff;
    display:flex;
    flex-direction:column;

}
.shop_car .car_title{
    height:80rpx;
    padding:0 30rpx;
    background: #F8FFF4;
}
.car_title image{
    width:28rpx;
    height:29rpx;
    margin-right:13rpx;
}
.classify_list{
    overflow:auto;
    margin-bottom:100rpx;
    flex:1;
}
.icon_tag{
    width:32rpx;
    height:32rpx;
    margin-right:10rpx;
    margin-top:6rpx;
}
.classify_title{
    height:55rpx;
    line-height:55rpx;
    background: #F4F4F4;
    color:#60A33B;
    padding:0 30rpx;
}
.classify_title .icon_type{
    width:31rpx;
    height:30rpx;
    margin-right:10rpx;
}
.common_tag{
    width:100rpx;
    height:26px;
    background: #FFFFFF;
    border-radius: 4rpx;
    font-size:13px;
    text-align:center;
    line-height:26px;
}
.coupon_tag{
    color:#FF6901;
    border: 1rpx solid #FF6901;
}
.group_tag{
    color:#52C123;
    border: 1rpx solid #52C123;
}
.proprietary_tag{
    color:#FF9400;
    border: 1rpx solid #FF9400 ;
}

 .set_car image{
    width:46rpx;
    height:46rpx;
}
 .set_car .count{
    margin:0 20rpx;
}

/*底部购物车和结算*/
.car_box{
    position:fixed;
    bottom:0;
    left:0;
    width:100%;
    height:103rpx;
    background:rgba(0,0,0,0.7);
    border-bottom:1px solid #E5E5E5;
}

.car_box image{
    width:74rpx;
    height:74rpx;
}
.shopingcart_box{
    margin:0 45rpx;
    position:relative;
}
.shopingcart_box .count_num{
    position:absolute;
    width:29rpx;
    height:29rpx;
    border-radius:50%;
    background:#FF9000;
    font-size:24rpx;
    text-align:center;
    line-heigt:29rpx;
    right:-16rpx;
    top:0;
}
.total_money{
    font-size:36rpx;
    margin-left:40rpx;
}
.icon_settle{
    background:#81C95A;
    width:231rpx;
    height:100rpx;
    line-height:100rpx;
    text-align:center;
    color:#fff;
    font-size:36rpx;
}
.title{
    height:103rpx;
    padding:0 30rpx;
    border-bottom:1px solid #D9D9D9;
    background:#f5f5f5;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
}
.title view{
    font-size:36rpx;
}
.title image{
    width:27rpx;
    height:27rpx;
}